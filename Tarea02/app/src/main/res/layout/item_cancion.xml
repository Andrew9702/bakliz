<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#111111">

        <TextView
            android:id="@+id/cancion"
            android:text="CanciÃ³n"
            android:textSize="20sp"
            android:textColor="#FDFEFE"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_album"
            android:layout_toEndOf="@+id/image_album" />

        <TextView
            android:id="@+id/artista"
            android:text="Artista"
            android:textColor="#F0F3F4"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_below="@+id/cancion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_album"
            android:layout_toEndOf="@+id/image_album" />

        <ImageView
            android:id="@+id/image_album"
            android:layout_alignBottom="@+id/artista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:cropToPadding="false"
            android:src="@drawable/albumdesconocido"
            android:maxHeight="35dp"
            android:maxWidth="74dp"
            android:adjustViewBounds="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>