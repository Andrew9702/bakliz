<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    tools:context=".InfoHeroe">

    <!-- Nombre del superhéroe -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nombre"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        android:text="Héroe"
        />

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@drawable/marvel_logo"/>


    <!-- Información del superhéroe -->
    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10px"
        android:layout_below="@+id/image_hero">

        <TextView
            android:id="@+id/origen_titulo"
            android:text="Origen"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="#F0F3F4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/origen"
            android:text="Origen"
            android:textSize="15sp"
            android:textColor="#F0F3F4"
            android:layout_below="@+id/origen_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/hab_titulo"
            android:text="Habilidades"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="#F0F3F4"
            android:layout_below="@+id/origen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/habilidades"
            android:text="Habilidades"
            android:textSize="15sp"
            android:textColor="#F0F3F4"
            android:layout_below="@+id/hab_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>

</LinearLayout>