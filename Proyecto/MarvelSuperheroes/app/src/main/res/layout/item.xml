      android:src="@drawable/marvel_logo"
      android:maxHeight="35dp"
      android:maxWidth="74dp"
      android:adjustViewBounds="true" />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

